<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                card_view:cardCornerRadius="20dp"
                card_view:cardUseCompatPadding="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/Information"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius_top_left="20dp"
                        app:riv_corner_radius_top_right="20dp"
                        android:src="@drawable/talmoinfo"
                        app:riv_border_color="#333333"
                        app:riv_mutate_background="true"
                        app:riv_oval="false" />

                    <TextView
                        android:textColor="#47597e"
                        android:layout_margin="5dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:textStyle="bold"
                        android:text="탈모 종류 및 지식" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardUseCompatPadding="true">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/Clinic"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius_top_left="20dp"
                            app:riv_corner_radius_top_right="20dp"
                            android:src="@drawable/clinicimg"
                            app:riv_border_color="#333333"
                            app:riv_mutate_background="true"
                            app:riv_oval="false" />

                        <TextView
                            android:textColor="#47597e"
                            android:layout_margin="5dp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            android:textStyle="bold"
                            android:text="탈모 클리닉 찾기" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/Diary"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius_top_left="20dp"
                            app:riv_corner_radius_top_right="20dp"
                            android:src="@drawable/diaryimg"
                            app:riv_border_color="#333333"
                            app:riv_mutate_background="true"
                            app:riv_oval="false" />

                        <TextView
                            android:textColor="#47597e"
                            android:layout_margin="5dp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            android:textStyle="bold"
                            android:text="불편 신고 접수" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <Button
                    android:id="@+id/hairloss_product"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/shampoo"
                    />

                <Button
                    android:id="@+id/CreateQR_Btn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/qrcode_img"/>

                <Button
                    android:id="@+id/result_Btn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/binoculars"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    android:textColor="#47597e"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="탈모 제품"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginRight="30dp"
                    android:textColor="#47597e"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="QR 코드"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginRight="30dp"
                    android:textColor="#47597e"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="탈모 측정\n결과 보기"/>

            </LinearLayout>



